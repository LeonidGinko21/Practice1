#include <iostream>
using namespace std;
int main()
{
    char op;
    float number1, number2;
    cout << "Enter your operation + or - or * or /:\n";
    cin >> op;
    cout << "Enter first numbers:\n";
    cin >> number1;
    cout << "Enter second numbers:\n";
    cin >> number2;
    switch(op)
    {
        case '+':
            cout << number1+number2;
            break;
        case '-':
            cout << number1-number2;
            break;
        case '*':
            cout << number1*number2;
            break;
        case '/':
            cout << number1/number2;
            break;
        default:
            cout << "Operation not find";
            break;
    }
    return 0;
}
