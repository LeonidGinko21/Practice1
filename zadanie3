#include <string>
using namespace std;
int main()
{
    system("chcp 65001");
    int A;
    string apple = "яблок";
    cout<<"Введите кол-во яблок:\n";
    cin >> k;
    {
        if ((A==1) || (A % 10 == 1)) {
            apple = apple +"о";
        }
        if ((A > 1 && A < 5) || (A % 10 > 1 && A % 10 < 5)) {
            apple = apple + "а";
        }
        if ((A >= 5 && A < 10) || (A % 10 >= 5 && A % 10 < 10) || (A % 100 > 10 && A % 100 < 15 )) {
            apple = "яблок";
        }

        cout << A << ' ' << apple << endl;

    }
}
